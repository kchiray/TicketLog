@model IEnumerable<TicketLog.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        body {
            padding-bottom: 150px;
        }
        .body-content {
            margin-left: 5px;
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <h1 class="center">Tickets</h1>
    <hr />
<div class="body-content">
    <form asp-action="Index" method="get">
        <div class="form-actions">
            <a class="btn" asp-action="Create">New Ticket</a>
                
                <div class="right" style="padding-right:20px;">
                    <i class="material-icons">search</i>                    
                    <input type="search"  name="SearchString" value="@ViewData["currentFilter"]" placeholder="Search by Issue/Severity" />
                    <input type="submit" value="Search" class="btn" />
                </div>
            
        </div>
    </form>
    <table class="bordered highlight">
        <thead class="table-striped bg-warning">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">Submission Date</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["IssueSortParm"]">@Html.DisplayNameFor(model => model.Issue)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Times Occured
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["SeveritySortParm"]">@Html.DisplayNameFor(model => model.Severity)</a>
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmissionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Issue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimesOccured)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Severity)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</body>

</html>
