@model TicketLog.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">  
        <div class="form-group">
            <label asp-for="SubmissionDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SubmissionDate" class="form-control" />
                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Issue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Issue" class="form-control" >
                    <option>Select Issue</option>
                    <option>Apply Now Button</option>
                    <option>Photo/Proof</option>
                    <option>Lost Snowpass</option>
                    <option>Payment Cannot be Processed</option>
                    <option>Application Cancelled</option>
                </select>
                <span asp-validation-for="Issue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TimesOccured" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TimesOccured" class="form-control" />
                <span asp-validation-for="TimesOccured" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Severity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Severity" class="form-control" >
                    <option>Select Severity</option>
                    <option>Low</option>
                    <option>Medium</option>
                    <option>High</option>
                </select>
                <span asp-validation-for="Severity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
