@model TicketLog.Models.Statistic

@{
    ViewData["Title"] = "Create";
}

<h2 class="col-xs-offset-4" style="padding-top:50px; padding-bottom: 30px;">Create A Statistic</h2>

<form asp-action="Create">
    <div class="form-horizontal col-xs-offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="EntryDate" class="form-control" />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
        </div>     
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="Emails" class="form-control" placeholder="Emails"/>
                <span asp-validation-for="Emails" class="text-danger"></span>
            </div>
        </div>        
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="NewApplicaitons" class="form-control" placeholder="New Applications" />
                <span asp-validation-for="NewApplicaitons" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="ToDo" class="form-control" placeholder="To Do"/>
                <span asp-validation-for="ToDo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="YearToDate" class="form-control" placeholder="Year To Date" />
                <span asp-validation-for="YearToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="IncompleteApplications" class="form-control" placeholder="Incomplete Applications"/>
                <span asp-validation-for="IncompleteApplications" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-block" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
